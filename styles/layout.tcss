#scrollable_studiolist_settings {
	/*border: solid red;*/
	margin-bottom: 1;
	/*min-height:40%;*/
}
#horizontal_tag_container {
	height: 6;
	/*border:solid red;*/
}


#contact_button_container {
	layout: grid;
}


#collapsible_mail_contact_list {
	max-height: 80%;
}
#scrollable_mail_contact_list {
	margin-bottom: 2;
}
#mail_contact_left_column {
	max-height: 100%;
}
#selectionlist_tags {
	height: 1fr;
}


#button_filter_add_contact, #button_clear_contact {
	width: 50%;
}



#optionlist_contact {
