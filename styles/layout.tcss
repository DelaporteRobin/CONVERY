









/* TCSS FOR THE GLOBAL WIDGETS */
ListView, MultiListView {
	border:round $primary;
	color: white;
}
Label {
	color: white;
}
TextArea {
	border:round $primary;
}
ListView, MultiListView, TextArea, OptionList, SelectionList {
	border-title-align:left;
	border-title-style:bold;
}
Collapsible {
	background: $surface;
	border-right: heavy $secondary;
	border-left: heavy $secondary;
	/*border: heavy $secondary;*/
}
Button {
	/*background: $background;*/
	background: $surface;
	color: white;
	border: heavy white;
}






/* MAIN CONTAINER OF THE MAIN PAGE */
#main_left_container {
	width:40%;
}
#left_vertical_container {
	min-height:1fr;
	width:45%;
}
#left_bottom_container {
	max-height:8;
}




/* TCSS FOR THE MAIN PAGE */
#left_horizontal_classoption_bar {
 	height:auto;
 	margin-top:5;
}
#left_horizontal_option_bar {
	layout: grid;
	grid-size: 4 1;
	height: 5;

	margin-bottom: 1;
	padding-top: 1;
	padding-bottom:1;

	background: $surface;
}

#left_vertical_container {
