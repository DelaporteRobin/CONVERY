	/*background: black;*/
}








/* TCSS DEPENDING OF THE CLASS / STATUS OF THE WIDGET */
.darken_button {
	background: $background;
}
.error_button {
	border: heavy $error;


	background: $error;
}
.primary_button {
	border: heavy $primary;
	background: $primary;
}

.label_warning {
	color: $warning;
}
.label_error {
	color: $error;
}
.label_standard {
	color: white;
}
.label_accent {
	color: $accent;
}
.label_primary {
	color: $primary;
}

#label_title {
	color: $accent;
}








/* TCSS CODE FOR THE MODAL SCREEN TO CREATE CONTACT */
ModalConveryScreenUser, ModalContact, ModalConveryScreenContact, ModalConveryScreenLinkedin {
	align: center middle;
}


#modal_createcontact_container, #modal_linkedin_container, #modal_usersettings_vertical_container {
	padding: 0 1;
	width: 50%;

	align: center middle;

	background: $surface;

}

#modal_linkedin_content_switcher {
	height: 90%;
}
#modal_list_linkedin_contact {
	height: 1fr;
}


#modal_newcompany_otheranswer {
	height:8;

	border-title-align:left;
	border-title-style:bold;

}

#modal_addcontact_container {
	height:5;
	/*background: blue;*/
}
#modal_newcontact_container {
	align: center middle;
	height:5;
}

#modal_newcontacttype, #modal_newcontactname, #modal_newcontactposition, #modal_newcontactmail, #modal_newcontactwebsite {
	width:20%;
}

#modal_horizontal_container {
	align: center middle;
	height:7;
}

#modal_create_contact_button, #modal_cancel_contact_button {
